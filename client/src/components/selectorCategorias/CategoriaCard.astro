---
import type { Categoria } from "../../types/General.type";

interface Props {
  categoria: Categoria;
}

const { categoria } = Astro.props as Props;
---

<a
  class="size-20"
  href={`/categoria/${categoria.alias}`}
  title={categoria.nombre}
>
  <img
    loading="lazy"
    class="size-20 rounded-xl object-cover"
    src={`/images/productos/${categoria.image}`}
    alt={categoria.nombre}
  /></a
>
